<% if comment.id %>
<dl class="comment">
	<dt>
        <img src="http://www.gravatar.com/avatar/<%=Digest::MD5.hexdigest(comment.email.downcase)%>?s=48" width="48" height="48" />
    </dt>
	<dd>
    <span>    <%= link_to comment.commenter, comment.website %> : </span>
    <p><%= comment.body %></p>
    </dd>
</dl>
<% end %>
